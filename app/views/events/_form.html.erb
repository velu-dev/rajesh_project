<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :participates %>
    <%= form.text_field :participates %>
  </div>
  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_field :event_date %>
  </div>
  <div class="field">
    <%= form.label :event_time %>
    <%= form.text_field :event_time %>
  </div>
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
     <div class="field">
    <%= form.label :class_detail_id %>
    <%= form.select(:class_detail_id, ClassDetail.all.collect {|p| [ p.class_name, p.id ] }, {include_blank: "Select Class"}, { :class => 'custom-select' }) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
